<div class="2col__wrapper">
	{% if direction == 'rtl' %}
		<div class="2col_img">
			<img src="{{ Image(post.meta('2col-img')).src('large') }}" />
		</div>
		<div class="2col_text">
			{{ post.meta('2col-text') }}
		</div>
	{% else %}
		<div class="2col_text">
			{{ post.meta('2col-text') }}
		</div>
		<div class="2col_img">
			<img src="{{ Image(post.meta('2col-img')).src('large') }}" />
		</div>
	{% endif %}
</div>